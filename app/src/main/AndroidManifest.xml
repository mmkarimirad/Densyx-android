<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bs.dental">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="com.bs.dental.MyApplication"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.bs.dental.ui.activity.SplashScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bs.dental.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bs.dental.ui.activity.PaypalActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bs.dental.ui.activity.AuthorizeDotNetPaymentMethodActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bs.dental.ui.activity.CyberSourceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bs.dental.ui.activity.BaseUrlChangeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bs.dental.ui.activity.FullScreenImageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bs.dental.barcode.BarcodeCaptureActivity"
            android:screenOrientation="portrait" />

        <service android:name="com.bs.dental.fcm.MessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name="com.bs.dental.fcm.InstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="roboguice.modules"
            android:value="com.bs.dental.service.ApiClientModule" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity android:name="com.bs.dental.ui.activity.GalleryActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>