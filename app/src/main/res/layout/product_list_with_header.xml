<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        android:id="@+id/cv_category_product_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/featuredCategoryContainerLayout"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_layout_big"
        card_view:cardCornerRadius="5dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp">


                <com.rey.material.widget.TextView
                    android:id="@+id/title"
                    style="@style/FeatureItem.Header.Primary"
                    android:gravity="left"
                    android:paddingBottom="6dp"
                    android:paddingLeft="6dp"
                    android:paddingTop="6dp"
                    android:layout_marginBottom="5dp"
                    android:text="محصولات مرتبط" />

                >
            <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"

                android:id="@+id/rclv_product_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>


