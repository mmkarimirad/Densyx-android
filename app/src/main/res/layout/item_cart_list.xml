<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/container"
        android:orientation="vertical"
        android:padding="5dp">

        <CheckBox
            android:id="@+id/fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:button="@drawable/fav_checkbox_selector"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_productImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tv_productName"

            style="@style/productsNameStyle"
            android:layout_alignTop="@+id/img_productImage"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/quantity_layout"
            android:layout_toRightOf="@+id/img_productImage"
            android:text="Pricedf" />


        <TextView
            android:id="@+id/tv_product_short_descrption"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_productName"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_productImage"
            android:text="Pricedsfsdfsdffdfdsf"
            android:textColor="@color/textPrimaryColor"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/tv_productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_short_descrption"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/img_productImage"
            android:text="Pricedsfsdfsdffdfdsf"
            android:textColor="@color/priceColor"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/quantity_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_toLeftOf="@+id/btn_remove"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_arrow_up_black_36dp"

                />

            <com.bs.dental.ui.customview.NoMenuEditText
                android:id="@+id/et_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:text="1"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_arrow_down_black_36dp"

                />

        </LinearLayout>
        <!-- <com.bs.ecommerce.ui.customview.NoMenuEditText
                 android:layout_marginLeft="1dp"
                 android:layout_marginTop="1dp"
                 android:inputType="numberDecimal"
                 android:layout_width="wrap_content"
                 android:layout_height="70dp"
                 android:layout_toLeftOf="@+id/btn_remove"
                 android:text="1"
                 android:layout_centerVertical="true"
                 android:gravity="center"
                 android:textSize="16sp"
                 android:id="@+id/et_quantity"
                 android:background="@null"
                 android:drawableTop="@drawable/ic_keyboard_arrow_up_black_24dp"
                 android:drawableBottom="@drawable/ic_keyboard_arrow_down_black_24d-->p"/>

        <ImageView
            android:id="@+id/btn_remove"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_close" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

